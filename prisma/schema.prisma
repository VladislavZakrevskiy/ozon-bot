generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String        @id @default(auto()) @map("_id") @db.ObjectId
  tg_chat_id     Int
  login          String        @unique // почта
  password       String
  phone_number   String
  first_name     String
  last_name      String
  post           String
  employee_level EmployeeLevel
  money          Int
  isApproved     Boolean

  @@map("users")
}

model Order {
  id String @id @default(uuid()) @map("_id") @db.ObjectId

  @@map("orders")
}

model Return_Orders {
  id String @id @default(uuid()) @map("_id") @db.ObjectId

  @@map("return_orders")
}

enum EmployeeLevel {
  SUPER_ADMIN
  ADMIN
  BOSS
  EMPLOYEE
  ENEMY
}

enum OrderProcess {
  DONE
  IN_WORK
  FREE
}
